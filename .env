# Runtime environment
AUTH_MICROSERVICE_ENVIRONMENT=local
BOOTSTRAP_SECRET=local-bootstrap-secret
METRICS_INGEST_SECRET=local-metrics-secret
INTERNAL_API_SECRET=local-internal-secret

# Core database configuration (matches docker-compose defaults)
AUTH_MICROSERVICE_DB_HOST=auth_microservice-db
AUTH_MICROSERVICE_DB_PORT=5432
AUTH_MICROSERVICE_DB_USER=auth_microservice
AUTH_MICROSERVICE_DB_PASS=auth_microservice
AUTH_MICROSERVICE_DB_BASE=auth_microservice

# JWT & FastAPI Users secrets (local-only)
AUTH_MICROSERVICE_JWT_SECRET_KEY=local-jwt-secret-please-change-for-prod
USERS_SECRET=local-users-secret-please-change-for-prod

# Redis cache / rate limits
AUTH_MICROSERVICE_REDIS_HOST=auth_microservice-redis
AUTH_MICROSERVICE_REDIS_PORT=6379

# RabbitMQ broker
AUTH_MICROSERVICE_RABBIT_HOST=auth_microservice-rmq
AUTH_MICROSERVICE_RABBIT_PORT=5672

# MongoDB document store
AUTH_MICROSERVICE_MONGODB_URI=mongodb://auth_microservice-mongo:27017
AUTH_MICROSERVICE_MONGODB_DATABASE=auth_documents

# Casdoor (Google SSO via Casdoor) configuration
AUTH_MICROSERVICE_CASDOOR_ENDPOINT=https://casdoor.example.com
AUTH_MICROSERVICE_CASDOOR_CLIENT_ID=your-client-id
AUTH_MICROSERVICE_CASDOOR_CLIENT_SECRET=your-client-secret
AUTH_MICROSERVICE_CASDOOR_ORGANIZATION_NAME=your-casdoor-org
AUTH_MICROSERVICE_CASDOOR_APPLICATION_NAME=your-casdoor-app


